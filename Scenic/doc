$ pip3 install scenic
// add path 
$ export PATH=$PATH:/home/ubuntu/.local/bin 
// install poetry 
curl -sSL https://raw.githubusercontent.com/python-poetry/poetry/master/get-poetry.py | python3.8
//source poetry env
$ source $HOME/.poetry/env
//check activated env is scenic or not
$poetry env list
//install poetry
$ poetry install
// finally run scenic command

$ scenic file/path/filename.scenic

